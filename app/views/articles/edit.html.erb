<h1>Edit an article</h1>

<% if @article.errors.any? %>
  <h2>Article creation failed with the following errors:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li> <%= msg %>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Cancel Edit & Return to articles listing', articles_path, method: :get %>
