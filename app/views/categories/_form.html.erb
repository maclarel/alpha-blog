<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 mt-3 bg-info rounded", local: true) do |f|  %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>


        <div class="row justify-content-center">
          <div class="form-group row">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
</div>
